---
import { Image } from "astro:assets";
import { Icon } from "astro-icon/components";

const todaysDate: Date = new Date();
const birthday: Date = new Date(2000, 3, 16); // April 16, 2000
const age: number = Math.floor(
    (todaysDate.getTime() - birthday.getTime()) /
        (1000 * 60 * 60 * 24 * 365.2425),
);

import profilePic from "../assets/profile_pic.jpg";

const education = "CPGE && ISIMA && OU";
const location = "Lyon, France";
const signal = "TristanB0.742";
const signalLink =
    "https://signal.me/#eu/WYwsWB_b4jv31xlz5cVMuqrBngYWG2PbTdAS_EThgpwurUKxcylGoZaV2KAIVN8J";
const email = "contact@tristanbony.me";
const emailLink = "mailto:" + email;
const frenchPdf = "/pdf/CV_French.pdf";
const englishPdf = "/pdf/CV_English.pdf";
const blogLink = "https://blog.tristanbony.me";
---

<main
    class="flex flex-row flex-wrap w-full p-4 mb-2 bg-white rounded-2xl shadow-lg dark:bg-gray-800"
>
    <article class="m-2 xl:flex-[70%]">
        <h1 class="mb-4 text-2xl md:text-3xl">
            <pre
                class="inline text-green-500 dark:text-green-400 font-bold">tristan@website:~$</pre>
            <pre class="inline text-blue-500 dark:text-blue-400">whoami</pre>
        </h1>
        <div class="grid grid-cols-1 w-full mb-4 gap-4 md:grid-cols-2 md:mb-0">
            <div
                class="bg-gray-100 p-6 rounded-2xl shadow-lg border-l-4 border-sky-400 dark:bg-gray-900"
            >
                <h3 class="text-xl font-semibold text-sky-400">Tech Skills</h3>
                <ul class="list-disc pl-4 marker:text-sky-400">
                    <li>
                        <b>Taught</b>: C, C++, C# (.NET), Java, SQL, JS (React)
                    </li>
                    <li>
                        <b>Self-learned</b>: Python, HTML, CSS, JS (Astro), Rust
                    </li>
                    <li><b>OS</b>: GNU/Linux, Windows</li>
                    <li>
                        <b>Tools</b>: Git (GitHub, GitLab, Bitbucket), Docker
                    </li>
                </ul>
            </div>

            <div
                class="bg-gray-100 p-6 rounded-2xl shadow-lg border-l-4 border-lime-400 dark:bg-gray-900"
            >
                <h3 class="text-xl font-semibold text-lime-400">Education</h3>
                <ul class="list-disc pl-4 marker:text-lime-400">
                    <li>
                        <b>CPGE TSI</b>: Strong foundation in Mathematics,
                        Physics, and Industrial Sciences
                    </li>
                    <li><b>ISIMA</b>: Engineering School in CS</li>
                    <li><b>University of Oklahoma</b>: MS Degree in CS</li>
                </ul>
            </div>

            <div
                class="bg-gray-100 p-6 rounded-2xl shadow-lg border-l-4 border-rose-400 dark:bg-gray-900"
            >
                <h3 class="text-xl font-semibold text-rose-400">Interests</h3>
                <ul class="list-disc pl-4 marker:text-rose-400">
                    <li>
                        <b>Sports</b>: Mountain Biking, Skiing, Billards
                        (Blackball/Snooker/9-ball)
                    </li>
                    <li>
                        <b>Music</b>: Violin (started at age 4), 3 years in a
                        Rock band
                    </li>
                    <li>
                        <b>Video Games</b>: Portal, Trackmania, Rocket League
                    </li>
                    <li>
                        <b>Travels</b>: USA, Europe, Russia, and many others
                    </li>
                    <li>
                        <b>Other</b>: Movies, Series, Cats, FLOSS, Cars
                    </li>
                </ul>
            </div>

            <div
                class="bg-gray-100 p-6 rounded-2xl shadow-lg border-l-4 border-amber-400 dark:bg-gray-900"
            >
                <h3 class="text-xl font-semibold text-amber-400">Languages</h3>
                <ul class="list-disc pl-4 marker:text-amber-400">
                    <li><b>French</b>: Native</li>
                    <li><b>English</b>: C1 (TOEFL: 99/120, TOEIC: 975/990)</li>
                    <li><b>Spanish</b>: B1</li>
                    <li><b>Mandarin</b>: Notions</li>
                </ul>
            </div>
        </div>
    </article>
    <aside
        class="flex flex-col flex-wrap flex-1 justify-around items-center rounded-2xl shadow-lg xl:flex-[25%] xl:ml-5 dark:bg-gray-700"
    >
        <div class="w-full h-36 mb-14 bg-blue-500 rounded-t-2xl">
            <Image
                class="block w-32 h-auto mt-14 mb-0 mx-auto rounded-2xl"
                src={profilePic}
                alt="Portrait of me"
            />
        </div>
        <div class="p-4 mt-4 text-center">
            <ul>
                <li>
                    <span class="text-lg font-semibold">
                        Tristan Bony, {age}
                        <span class="italic">(he/him) </span>
                        <Icon name="france" size={24} class="inline" />
                        <Icon name="eu" size={24} class="inline" />
                    </span>
                </li>
                <li>
                    <Icon
                        name="material-symbols:school-outline-rounded"
                        size={16}
                        class="inline"
                    />
                    <span class="text-md">{education}</span>
                </li>
                <li>
                    <address>
                        <li class="card-li">
                            <Icon
                                name="material-symbols:location-on-outline-rounded"
                                size={16}
                                class="inline"
                            />
                            <span class="text-md">{location}</span>
                        </li>
                        <li class="card-li">
                            <Icon
                                name="simple-icons:signal"
                                size={16}
                                class="inline"
                            />
                            <a
                                href={signalLink}
                                title="Contact me through Signal"
                                class="text-md hover:underline hover:decoration-blue-500 hover:decoration-2"
                            >
                                {signal}
                            </a>
                        </li>
                        <li class="card-li">
                            <Icon
                                name="material-symbols:mail-outline-rounded"
                                size={16}
                                class="inline"
                            />
                            <a
                                href={emailLink}
                                title="Contact me by email"
                                class="text-md hover:underline hover:decoration-blue-500 hover:decoration-2"
                            >
                                {email}
                            </a>
                        </li>
                    </address>
                </li>
                <li>
                    <Icon
                        name="material-symbols:sim-card-download-outline-rounded"
                        size={16}
                        class="inline"
                    />
                    <a
                        href={englishPdf}
                        target="_blank"
                        title="Download my CV"
                        class="text-md hover:underline hover:decoration-blue-500 hover:decoration-2"
                    >
                        Download my CV
                    </a>
                </li>
                <li>
                    <Icon
                        name="material-symbols:sim-card-download-outline-rounded"
                        size={16}
                        class="inline"
                    />
                    <a
                        href={frenchPdf}
                        target="_blank"
                        title="Télécharger mon CV"
                        class="text-md hover:underline hover:decoration-blue-500 hover:decoration-2"
                    >
                        Télécharger mon CV
                    </a>
                </li>
                <li>
                    <Icon
                        name="material-symbols:web"
                        size={16}
                        class="inline"
                    />
                    <a
                        href={blogLink}
                        target="_blank"
                        title="Visit my blog"
                        class="text-md hover:underline hover:decoration-blue-500 hover:decoration-2"
                    >
                        Visit my blog
                    </a>
                </li>
            </ul>
        </div>
        <div class="flex flex-wrap justify-around items-center pb-4">
            <a
                href="https://www.linkedin.com/in/tristanbony/"
                target="_blank"
                title="Visit my LinkedIn"
                class="w-8 h-8 m-2 inline-block transition duration-300 ease-in-out hover:scale-125 focus:scale-90"
            >
                <Icon name="linkedin" title="Visit my LinkedIn" size={32} />
            </a>
            <a
                href="https://floss.social/@TristanB0"
                rel="me"
                target="_blank"
                title="Come see my toots"
                class="w-8 h-8 m-2 inline-block transition duration-300 ease-in-out hover:scale-125 focus:scale-90"
            >
                <Icon name="mastodon" title="Come see my toots" size={32} />
            </a>
            <a
                href="https://www.github.com/TristanB0"
                target="_blank"
                title="Link to my projects"
                class="w-8 h-8 m-2 inline-block transition duration-300 ease-in-out hover:scale-125 focus:scale-90 dark:hidden"
            >
                <Icon name="github" title="Link to my projects" size={32} />
            </a>
            <a
                href="https://www.github.com/TristanB0"
                target="_blank"
                title="Link to my projects"
                class="w-8 h-8 m-2 transition duration-300 ease-in-out hidden hover:scale-125 focus:scale-90 dark:inline-block"
            >
                <Icon
                    name="github_white"
                    title="Link to my projects"
                    size={32}
                />
            </a>
            <a
                href="https://codeberg.org/TristanB0"
                target="_blank"
                title="My projects but on Codeberg"
                class="w-8 h-8 m-2 inline-block transition duration-300 ease-in-out hover:scale-125 focus:scale-90"
            >
                <Icon
                    name="codeberg"
                    title="My projects but on Codeberg"
                    size={32}
                />
            </a>
        </div>
    </aside>
</main>
