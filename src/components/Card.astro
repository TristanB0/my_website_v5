---
interface Props {
	category: string;
	image: string;
	title: string;
	description: string;
	href: string;
	status: string;
}

const cardTitle = (cat: string) => {
	switch (cat) {
		case "achievement":
			return "Achievements";
		case "school-project":
			return "School projects";
		case "experience":
			return "Experiences";
		default:
			return "Unknown";
	}
};

const cardStatus = (status: string) => {
	switch (status) {
		case "completed":
			return {
				color: "text-green-500",
				status: "Completed",
			};
		case "in-progress":
			return {
				color: "text-yellow-500",
				status: "In progress",
			};
		case "abandoned":
			return {
				color: "text-red-500",
				status: "Abandoned",
			};
	}
};

const { category, image, title, description, href, status } = Astro.props;
---

<section class="card shadow-lg bg-white border md:w-[30%] m-2 w-[100%]">
	<figure>
		<img src={image} alt="Something to put here" /><!-- TODO - Add alt text -->
	</figure>
	<article class="card-body">
		<div class="inline">
			<div class="badge badge-outline text-gray-500">{cardTitle(category)}</div>
			<div class:list={["badge badge-outline text-gray-500", cardStatus(status)?.color || "invisible"]}>{cardStatus(status)?.status || null}</div>
		</div>
		<h2 class="card-title">{title}</h2>
		<p class="justify-normal">{description}</p>
		<div class="card-actions justify-end">
			<a class="btn btn-primary bg-blue-500 hover:bg-blue-600 focus:bg-blue-800 border-none" href={href}>Read more</a>
		</div>
	</article>
</section>
